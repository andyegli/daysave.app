<%- include('../partials/header', { title: 'Contact Details' }) %>

<h1 class="mb-4">Contact Details</h1>
<div class="card shadow-sm">
  <div class="card-body">
    <p class="card-text"><strong>Name:</strong> <%= contact.name %></p>
    <p class="card-text"><strong>Email:</strong> <%= contact.email %></p>
    <p class="card-text"><strong>Phone:</strong> <%= contact.phone %></p>
    <div class="mt-3">
      <a href="/contact/<%= contact.id %>/edit" class="btn btn-secondary me-2">Edit</a>
      <form action="/contact/<%= contact.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <a href="/contact" class="btn btn-outline-secondary ms-2">Back to Contact List</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>