<%- include('../partials/header', { title: 'Contact List' }) %>

<h1 class="mb-4">Contact List</h1>
<a href="/contact/create" class="btn btn-primary mb-3">Create New Contact</a>
<ul class="list-group">
  <% contacts.forEach(contact => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <a href="/contact/<%= contact.id %>"><%= contact.name %></a>
      <div>
        <a href="/contact/<%= contact.id %>/edit" class="btn btn-sm btn-secondary me-2">Edit</a>
        <form action="/contact/<%= contact.id %>/delete" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </li>
  <% }); %>
</ul>

<%- include('../partials/footer') %>