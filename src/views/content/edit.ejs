<%- include('../partials/header', { title: 'Edit Content' }) %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="card-title mb-4">Edit Content</h1>
        <form action="/content/<%= content.id %>" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= content.title %>" required>
          </div>
          <div class="mb-3">
            <label for="body" class="form-label">Body:</label>
            <textarea id="body" name="body" class="form-control" rows="5" required><%= content.body %></textarea>
          </div>
          <div class="d-flex">
            <button type="submit" class="btn btn-primary me-2">Update</button>
            <a href="/content" class="btn btn-outline-secondary">Back to Content List</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>